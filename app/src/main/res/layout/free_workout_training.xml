<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:src="@drawable/fw1"
            android:scaleType="fitXY"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/free_workout_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Single Workout"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/proxima_nova"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/free_workout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="16sp"
            android:text="A specialized workout designed to make sure that you hit all muscles with high intensity."
            android:fontFamily="@font/proxima_nova"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Intensity -"
                android:textAllCaps="true"
                android:fontFamily="@font/oswald"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="Medium"
                android:textAllCaps="true"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:textColor="#a2c430"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f7f7"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="270"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Calories"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="#b3b3b3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="40"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Minutes"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="#b3b3b3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="6"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Exercises"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/free_workout_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <Button
            android:id="@+id/dashboard_free_workouts_start_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_grey"
            android:fontFamily="@font/proxima_nova"
            android:paddingEnd="50dp"
            android:paddingStart="50dp"
            android:text="DOWNLOAD WORKOUT"
            android:textColor="@color/colorClear"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>